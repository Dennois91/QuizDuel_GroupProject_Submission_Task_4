<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ProfileController">
   <Button layoutX="125.0" layoutY="300.0" mnemonicParsing="false" onAction="#onPlayClick" prefHeight="50.0" prefWidth="100.0" text="Play">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Button>
   <Button layoutX="125.0" layoutY="450.0" mnemonicParsing="false" onAction="#onCloseClick" prefHeight="40.0" prefWidth="100.0" text="Close" />
   <Circle fill="WHITE" layoutX="175.0" layoutY="116.0" radius="70.0" stroke="BLACK" strokeType="INSIDE" />
   <ImageView fx:id="portrait" fitHeight="100.0" fitWidth="100.0" layoutX="125.0" layoutY="66.0" pickOnBounds="true" preserveRatio="true" />
   <TextField fx:id="nickTextField" alignment="CENTER" layoutX="56.0" layoutY="200.0" onAction="#setNickname" promptText="Set a nickname">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </TextField>
</AnchorPane>
